<section>
    <div class="container mt-4">
        <div class="row" >
            <h3>Add products to page</h3>
            <br>
            <a href="/admin/add-product" class="btn btn-success ml-auto mb-3" >Add Product</a>
        </div>
        <table class="table mt-3">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">No:</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">@</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width: 80px; height:80px" src="/product-images/{{this._id}}.jpg"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>